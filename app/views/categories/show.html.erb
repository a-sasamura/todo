
<h1>カテゴリー詳細</h1>

<table class="table table-hover">
  <tbody>
    <tr>
    　<th><%= Category.human_attribute_name(:id) %></th>
      <td><%= @category.id %></td>
    </tr>
    <tr>
    　<th><%= Category.human_attribute_name(:name) %></th>
      <td><%= @category.name %></td>
    </tr>
    <tr>
    　<th><%= Category.human_attribute_name(:created_at) %></th>
      <td><%= @category.created_at %></td>
    </tr>
    <tr>
    　<th><%= Category.human_attribute_name(:updated_at) %></th>
      <td><%= @category.updated_at %></td>
    </tr>
  </tbody>
</table>

<%= link_to '編集', edit_category_path(@category), class: "btn btn-primary" %>
<%= link_to '戻る', categories_path, class: "btn btn-outline-primary" %>
