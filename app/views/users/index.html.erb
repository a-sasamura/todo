<p id="notice"><%= notice %></p>

<h1>ユーザー一覧</h1>

<p class="text-right">
  <%= link_to '新規登録', new_user_path, class: "btn btn-primary" %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td class="text-right">
          <%= link_to '編集', edit_user_path(user), class: "btn btn-primary" %>
          <%= link_to '削除', user, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
