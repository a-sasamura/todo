<h1>マイタスク</h1>

<p class="text-right">
  <%= link_to '新規登録', new_task_path, class: "btn btn-primary" %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:name) %></th>
      <th><%= Task.human_attribute_name(:category) %></th>
      <th><%= Task.human_attribute_name(:description) %></th>
      <th><%= Task.human_attribute_name(:created_at) %></th>
      <th><%= Task.human_attribute_name(:updated_at) %></th>
    </tr>
  </thead>
 
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.category.name %></td>
        <td><%= task.description %></td>
        <td><%= task.created_at %></td>
        <td><%= task.updated_at %></td>
        <td class="text-right">
          <%= link_to '編集', edit_task_path(task), class: "btn btn-primary" %>
          <%= link_to '削除', task, class: "btn btn-danger", method: :delete, data: { confirm: 'ユーザーを削除します。よろしいですか?' } %>
        </td>       
      </tr>
    <% end %>
  </tbody>
</table>
